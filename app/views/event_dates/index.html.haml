%h1 Listing event_dates

%table
  %thead
    %tr
      %th Date
      %th Event
      %th Comment
      %th
      %th
      %th

  %tbody
    - @event_dates.each do |event_date|
      %tr
        %td= event_date.date
        %td= event_date.event
        %td= event_date.comment
        %td= link_to 'Show', event_date
        %td= link_to 'Edit', edit_event_date_path(event_date)
        %td= link_to 'Destroy', event_date, :method => :delete, :data => { :confirm => 'Are you sure?' }

